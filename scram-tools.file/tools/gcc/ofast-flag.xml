  <tool name="ofast-flag" version="1.0">
    <flags CXXFLAGS="-Ofast -fno-reciprocal-math"/>
    <ifcompiler name="gcc">
      <flags CXXFLAGS="-mno-recip"/>
    </ifcompiler>
    <ifarchitecture name="slc6_">
      <ifcompiler name="llvm">
        <flags CXXFLAGS="-fno-builtin"/>
      </ifcompiler>
    </ifarchitecture>
    <flags NO_RECURSIVE_EXPORT="1"/>
  </tool>
